{% extends 'base/admin.html.twig' %}

{% block content %}

    <div class="content-wrapper">
    <div class="container-fluid">
        {{ parent() }}
        <div class="card mb-3">
            <div class="card-header">Список категорий</div>
            <div class="row">
                <div class="col-sm-4">
                    <a href="{{ path('addCategory') }}" class="btn btn-success">Добавить категорию</a>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-4">
                        <table class="table">
                            <tr>
                                <th>Название</th>
                                <th>Родитель</th>
                            </tr>
                            {% for category in categories %}
                                <tr>
                                    <td>{{ category.name }}</td>
                                    {% if category.parent is empty %}
                                    <td>null</td>
                                    {% else %}
                                    <td>{{ category.parent }}</td>
                                    {% endif %}
                                    <td><a href="{{ path('editCategory', {'category': category.id}) }}" class="btn btn-primary">Редактировать</a></td>
                                    <td><a href="{{ path('deleteCategory', {'category': category.id}) }}" class="btn btn-danger">Удалить</a></td>
                                </tr>
                            {% endfor %}
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}